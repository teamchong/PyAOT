# Browser benchmarks (5 libraries - 10K iterations each)
benchmark-web: build-wasm
	@echo "$(BLUE)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@echo "$(GREEN)üåê Browser Tokenizer Benchmark (10K iterations)$(RESET)"
	@echo "$(BLUE)‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ‚îÅ$(RESET)"
	@echo ""
	@if ! python3 -c "import playwright" 2>/dev/null; then \
		echo "$(YELLOW)‚ö†Ô∏è  Installing playwright...$(RESET)"; \
		pip install playwright && playwright install chromium; \
	fi
	@python3 run_browser_benchmark.py
	@echo ""

# Build native tokenizer
build:
	@echo "$(YELLOW)üî® Building native tokenizer...$(RESET)"
	@zig build --release=fast
	@zig build-exe src/bench_native.zig -O ReleaseFast
	@mv bench_native zig-out/bin/
	@echo "$(GREEN)‚úÖ Build complete$(RESET)"
	@echo ""

# Build WASM tokenizer
build-wasm:
	@echo "$(YELLOW)üî® Building WASM tokenizer...$(RESET)"
	@mkdir -p dist
	@zig build-lib src/wasm.zig -target wasm32-freestanding -O ReleaseFast -dynamic
	@mv wasm.wasm dist/pyaot_tokenizer.wasm
	@if [ ! -f dist/cl100k_simple.json ]; then \
		echo "$(YELLOW)‚ö†Ô∏è  cl100k_simple.json not found in dist/$(RESET)"; \
		echo "$(YELLOW)   Copy vocab file: cp vocab/cl100k_simple.json dist/$(RESET)"; \
		exit 1; \
	fi
	@echo "$(GREEN)‚úÖ WASM build complete$(RESET)"
	@echo ""

# Clean build artifacts
clean:
	@echo "$(YELLOW)üßπ Cleaning build artifacts...$(RESET)"
	@rm -rf zig-out/ zig-cache/ dist/*.wasm
	@rm -f bench_trainer bench_cl100k test_tokendagger
	@rm -f *.a *.o
	@echo "$(GREEN)‚úÖ Clean complete$(RESET)"
